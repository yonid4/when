# Event Coordination App - Backend Environment Variables Example
# Copy this file to .env and fill in your actual values


# Security hardening
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask Environment
FLASK_APP=run.py
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Flask Security
SECRET_KEY="your-secret-key"
JWT_SECRET_KEY="your-jwt-secret-key"

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Backend needs these (without REACT_APP_ prefix)
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Frontend needs these (with REACT_APP_ prefix)
REACT_APP_SUPABASE_URL="your-supabase-url"
REACT_APP_SUPABASE_ANON_KEY="your-supabase-anon-key"

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================

# Google OAuth 2.0 Credentials
# Get these from Google Cloud Console: APIs & Services â†’ Credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your--google-client-secret"

# OAuth Redirect URI
# Must match what you configure in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# =============================================================================
# GEMINI AI CONFIGURATION
# =============================================================================

# Gemini API credentials
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_RETRIES=3


# =============================================================================
# MICROSOFT CONFIGURATION
# =============================================================================

MICROSOFT_CLIENT_ID='your-microsoft-client-id'
MICROSOFT_CLIENT_SECRET='your-microsoft-client-secret'
MICROSOFT_TENANT_ID="common"
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/auth/microsoft/callback